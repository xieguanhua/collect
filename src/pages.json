{
  "easycom": {
    "^u-(.*)": "uview-ui/components/u-$1/u-$1.vue"
  },
  "pages": [
    //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
    {
      "path": "pages/home/index",
      "style": {
      }
    },
    {
      "path": "pages/classify/index",
      "style": {
        "navigationStyle": "custom",
        "app-plus":{
          "bounce":"none"
        }
      }
    },
    {
      "path": "pages/bookrack/index",
      "style": {
      }
    },
    {
      "path": "pages/search/index",
      "style": {
        "navigationStyle": "custom",
        "app-plus":{
          "softinputMode": "adjustResize",
          "softinputNavBar":"none"
        }
      }
    },
    {
      "path": "pages/set/index"
    },
    {
      "path": "pages/details/cartoon/index"
    },
    {
      "path": "pages/details/video/index"
    },
    {
      "path": "pages/details/video/webPage"
    },
    {
      "path": "pages/details/cartoon/preview",
      "style": {
        "navigationStyle": "custom"
      }
    }
  ],
  "globalStyle": {
    "navigationBarTextStyle": "black",
    "navigationBarTitleText": "浏览器",
    "navigationBarBackgroundColor": "#ffffff",
    "backgroundColor": "#ffffff"
  },
  "tabBar": {
    "color": "#ccc",
    "selectedColor": "#000000",
    "borderStyle": "white",
    "backgroundColor": "#ffffff",
    "iconWidth": "20px",
    "list": [
      {
        "pagePath": "pages/home/index",
        "iconPath": "static/image/tabBar/home.png",
        "selectedIconPath": "static/image/tabBar/home_active.png",
        "text": "首页"
      },
      {
        "pagePath": "pages/classify/index",
        "iconPath": "static/image/tabBar/classify.png",
        "selectedIconPath": "static/image/tabBar/classify_active.png",
        "text": "分类"
      },
      {
        "pagePath": "pages/bookrack/index",
        "iconPath": "static/image/tabBar/bookrack.png",
        "selectedIconPath": "static/image/tabBar/bookrack_active.png",
        "text": "书架"
      },
      {
        "pagePath": "pages/set/index",
        "iconPath": "static/image/tabBar/set.png",
        "selectedIconPath": "static/image/tabBar/set_active.png",
        "text": "设置"
      }
    ]
  }
}
